<div class=" clearfix hover-colorize">
  <% if task.status? %>
    <div class="col-lg-1">
      <%= link_to complete_project_task_path(task.project, task), method: :patch do %>
        <i style="opacity:0.4;" class="fa fa-check-square" ></i>
      <% end %>
    </div>

    <div class="col-lg-9">
      <p style="opacity: 0.4;"><strike><%= task.name %></strike></p>
    </div>

    <div class="col-lg-2 text-center">
      <i class="fa fa-sort">|</i>
      <%= link_to edit_project_task_path(task.project.id, task) do %>
        <i class="fa fa-pencil">|</i>
      <% end %>

      <%= link_to project_task_path(task.project.id, task), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-times"></i>
      <% end %>
    </div>

    <% else %>

    <div class="col-lg-1">
      <%= link_to complete_project_task_path(task.project.id, task), method: :patch do %>
        <i class="fa fa-square"></i>
      <% end %>
    </div>


    <div class="col-lg-9">
      <p><%= task.name %></p>
    </div>

    <div class="col-lg-2 text-center">
      <i class="fa fa-sort"></i>
      <%= link_to edit_project_task_path(task.project.id, task) do %>
        <i class="fa fa-pencil" ></i>
      <% end %>

      <%= link_to project_task_path(task.project.id, task), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-times"></i>
      <% end %>
    </div>

    <% end %>

</div>
<hr>
