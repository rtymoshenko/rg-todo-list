<h1 align="center"><strong>SIMPLE TODO LIST</strong></h1>
<h3 align="center">FROM RUBY GARAGE</h3>

<% @projects.each do |p| %>
  <% if p.user == current_user %>
  <div>
    <%= p.id %>
    <%= p.name %>
  </div>
  <% end %>
<% end %>

<div id="all-projects">
  <%= render @projects %>
</div>

<br>

<div align="center">
  <%= link_to @project, remote: true , method: :post, id: "add-project", class: "btn btn-lg btn-primary" do %>
    <i class="fa fa-plus"></i>
      Add TODO List
  <% end %>
</div>

